<div class="container">
  <h1>Welcome to Carrot Cake!</h1>
  <p>Hello, flashcards!</p>
  <h1>Signup</h1>
  <% if @new_user %>
    <% if @new_user.errors.any? %>
      <div id="error_explanation">
     
        <ul>
        <% @new_user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
 <form action="/user/create" method="post">

    User name:<br>
    <input type="text" name="username"><br>

    Password:<br>
    <input id="p1" type="password" name="password"><br>

    Retype Password:<br>
    <input type="password" name="password_confirmation"><br>

    <input type="submit" value="Make that cake!">
  </form>

   <h1>Login</h1>
 <form action="/user/login" method="post">

    User name:<br>
    <input type="text" name="username"><br>

    Password:<br>
    <input type="password" name="password"><br>

    <input type="submit" value="Eat that cake!">
  </form>

</div>
